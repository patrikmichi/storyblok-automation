{
  "name": "security_card",
  "display_name": "Security Card",
  "is_nestable": true,
  "is_root": false,
  "schema": {
    "image": {
      "type": "asset",
      "required": false,
      "pos": 0,
      "description": "Security certification image",
      "filetypes": [
        "images"
      ]
    },
    "headline": {
      "type": "text",
      "required": true,
      "pos": 1,
      "description": "Card headline"
    },
    "subtext": {
      "type": "textarea",
      "required": false,
      "pos": 2,
      "description": "Card description/subtext"
    },
    "show_subtext": {
      "type": "boolean",
      "required": false,
      "pos": 3,
      "default_value": true,
      "description": "Show/hide subtext"
    },
    "link": {
      "type": "multilink",
      "required": false,
      "pos": 4,
      "description": "Optional link for the card"
    },
    "link_label": {
      "type": "text",
      "required": false,
      "pos": 5,
      "description": "Link label text (shown if link is provided)"
    },
    "show_link": {
      "type": "boolean",
      "required": false,
      "pos": 6,
      "default_value": true,
      "description": "Show/hide link"
    },
    "card_type": {
      "type": "option",
      "required": false,
      "pos": 7,
      "default_value": "Shadow",
      "options": [
        {
          "value": "Shadow",
          "name": "Shadow"
        },
        {
          "value": "Border",
          "name": "Border"
        },
        {
          "value": "Dark",
          "name": "Dark"
        }
      ],
      "description": "Card visual style type"
    }
  }
}